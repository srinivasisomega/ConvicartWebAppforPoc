@model ConvicartWebApp.Models.Customer

<h1>Profile Picture</h1>

<!-- Display profile image if uploaded -->
@if (Model.ProfileImage != null)
{
    <img src="@Url.Action("GetProfileImage", "Customer", new { id = Model.CustomerId })" alt="Profile Image" width="200" height="200" />
}
else
{
    <p>No profile image uploaded.</p>
}

<!-- Form to upload new profile image -->
<form asp-action="UploadProfileImageSave" enctype="multipart/form-data" method="post">
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />

    <div>
        <label for="image">Upload Profile Image</label>
        <input type="file" name="image" id="image" accept="image/*" required />
    </div>

    <button type="submit">Upload Image</button>
</form>
