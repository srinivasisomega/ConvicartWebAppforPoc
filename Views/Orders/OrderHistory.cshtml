@model IEnumerable<Order>

<h2>Your Order History</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>First Item Image</th>
            <th>Total Amount Spent</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                <td>
                    <img src="~/Images/store/@order.OrderItems.FirstOrDefault()?.imgUrl" alt="Product Image" width="50" height="50" />
                </td>
                <td>@order.TotalAmount.ToString("C")</td> <!-- Display the correct TotalAmount -->
            </tr>
        }
    </tbody>
</table>

<style>
    .past-orders {
        padding: 20px;
    }

    .filter-buttons {
        margin-bottom: 20px;
    }

    .filter-button {
        margin-right: 10px;
        background-color: #f5c518;
        border: none;
        padding: 10px;
        cursor: pointer;
    }

    .order-list {
        margin-top: 20px;
    }

    .order-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
        border-bottom: 1px solid #ccc;
    }

    .order-details {
        display: flex;
        align-items: center;
    }

    .order-image {
        width: 100px;
        height: 100px;
        margin-right: 20px;
    }

    .order-info h3 {
        margin: 0;
    }

    .order-again-button {
        background-color: #f5c518;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }

    .show-more {
        text-align: center;
        margin-top: 20px;
    }

    .show-more-button {
        background-color: #f5c518;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }
</style>

