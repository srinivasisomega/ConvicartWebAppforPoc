@model IEnumerable<Order>
<style>
    .container{
        align-items:center;
    }
h2 {
    color: #333;
    font-size: 28px;
    margin-bottom: 20px;
}

/* Table styling */
.table {
    width: 900px;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
}

.table thead {
    background-color: #2c3e50;
    color: #fff;
}

.table th, .table td {
    padding: 12px 15px;
    text-align: left;
}

.table th {
    font-weight: bold;
}

.table td {
    border-bottom: 1px solid #ddd;
    
}

.table img {
    border-radius: 5px;

}

/* Hover effect for table rows */
.table tbody tr:hover {
    background-color: #f1f1f1;
}

/* Add some spacing between rows */
.table tbody tr {
    transition: background-color 0.3s ease;
}

/* Style for the order date and amount */
.table td:nth-child(1), .table td:nth-child(3) {
    font-weight: 500;
    color: #2c3e50;
}


</style>
<h2 style="display:flex; text-align:left; padding-left:3vw; font-family: Roboto; font-weight:bold; color:grey; margin-top:30px;">
    Your Order History
</h2>
<table class="table">
    <thead>
        <tr>
            <th>OrderId</th>
            <th>Order Date</th>
            <th>First Item Image</th>
            <th>Total Amount Spent</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td style="border-left:1px solid #ddd;">@order.OrderId</td>
                <td >@order.OrderDate.ToString("dd MMM yyyy")</td>
                <td>
                    <img src="~/Images/store/@order.OrderItems.FirstOrDefault()?.imgUrl" alt="Product Image" width="90" height="80" />
                </td>
                <td style="border-right:1px solid #ddd;">@order.TotalAmount.ToString("C")</td> <!-- Display the correct TotalAmount -->
            </tr>
        }
    </tbody>
</table>


