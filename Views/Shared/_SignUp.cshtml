@model ConvicartWebApp.Models.Customer

<h2 class="text-center mb-4">Sign Up</h2>
<form asp-action="SignUp" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" id="SignUp_Name" placeholder="Enter your name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" id="SignUp_Email" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Number">Mobile Number</label>
        <input asp-for="Number" class="form-control" id="SignUp_Number" placeholder="Enter your mobile number" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="SignUp_Password" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" name="ConfirmPassword" id="SignUp_ConfirmPassword" class="form-control" placeholder="Confirm your password" />
        <span id="confirmPasswordError" class="text-danger"></span> <!-- Custom confirm password validation -->
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="SignUp_Terms" required />
        <label class="form-check-label" for="SignUp_Terms">Do you agree to the Terms & Conditions?</label>
        <div class="invalid-feedback">You must agree to the terms before submitting.</div>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Register</button>
</form>

<!-- JavaScript for unobtrusive validation and custom ConfirmPassword validation -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Custom Confirm Password Validation
        const password = document.querySelector("#SignUp_Password");
        const confirmPassword = document.querySelector("#SignUp_ConfirmPassword");
        const confirmPasswordError = document.querySelector("#confirmPasswordError");

        confirmPassword.addEventListener("input", function () {
            if (confirmPassword.value !== password.value) {
                confirmPasswordError.textContent = "Passwords do not match.";
            } else {
                confirmPasswordError.textContent = "";
            }
        });

        // Trigger unobtrusive validation when typing
        $("form").validate({
            onkeyup: function (element) {
                $(element).valid();
            }
        });
    });
</script>
