@model ConvicartWebApp.Models.Customer

<h2>Sign Up</h2>
<form asp-action="SignUp" method="post">
    <div>
        <label for="Name">Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label for="Email">Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label for="Number">Mobile Number</label>
        <input asp-for="Number" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div>
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" name="ConfirmPassword" id="ConfirmPassword" />
        <span id="confirmPasswordError" class="text-danger"></span> <!-- To display error if needed -->
    </div>
    <div>
        <input type="checkbox" id="terms" required />
        <label for="terms">Do you agree to the Terms & Conditions?</label>
    </div>

    <button type="submit">Register</button>

    <!-- Social Login Buttons -->
    <div class="social-login">
        <a class="google" href="#"></a>
        <a class="facebook" href="#"></a>
        <a class="microsoft" href="#"></a>
    </div>
</form>

