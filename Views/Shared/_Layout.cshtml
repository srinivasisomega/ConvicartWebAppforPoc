<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConvicartWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConvicartWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header1">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="Brand Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Subscription">Subscription</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Store">Convi-Store</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Recipe">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex" asp-controller="Home" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query" />
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
                <a class="nav-profile" asp-area="" asp-controller="Profile" asp-action="Index">
                    <img src="~/profile avatar.png" alt="User Profile" />
                </a>
            </div>

        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer >
        <div class="container1">
            <div class="footer-top">
                <div class="footer-logos">
                    <div class="footer-logo-top">
                        <a class="footer-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/logo.png" alt="Brand Logo" />
                        </a>
                    </div>
                    <div class="footer-logo-bottom">
                        <a class="facebook" href="">
                            <img src="~/logo.png" alt="Brand Logo" />
                        </a>
                        <a class="insta" href="">
                            <img src="~/logo.png" alt="Brand Logo" />
                        </a>
                        <a class="youtube" href="">
                            <img src="~/logo.png" alt="Brand Logo" />
                        </a>
                        <a class="linkedin" href="">
                            <img src="~/logo.png" alt="Brand Logo" />
                        </a>
                    </div>

                </div>
                <div class="footer-contact">
                    <ul>
                        <li><strong>Contact Us</strong></li>
                        <li>+918332456123</li>
                        <li>+919948234145</li>
                        <li>Sabsbs@gmail.com</li>
                        <li>Customer.Convicart@gmail.com</li>
                    </ul>
                </div>
                <div class="footer-service">
                    <ul class="footer-service-list">
                        <li><strong>Services</strong></li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Store">Ingredient Delivery</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Recipe">Cooking Tutorials</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
